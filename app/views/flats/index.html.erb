<div class="container">
  <h1>All our flats</h1>
  <div class="row">
      <% @flats.each do |flat| %>
      <div class= "col-4 mb-4">
        <div class="card">
          <img class="card-img-top" src=<%= flat.picture_url %> alt="image">
          <div class="card-body">
            <h2><%= flat.name %></h2>
            <p class="card-text"><%= flat.address %></p>
            <div class="row">


                  <div class="d-flex col-2">
                    <i class="fas fa-user-friends"></i>
                    <p><%= flat.number_of_guests %></p>
                  </div>
                  <div class="d-flex col-2">
                    <i class="fas fa-euro-sign"></i>
                    <p><%= flat.price_per_night %></p>
                  </div>
                </div>



            <div class="d-flex justify-content-between">
              <p>More Info</p>
              <p>Edit</p>
              <p>Remove</p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
 </div>
